<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titles">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@color/background_titles</item>
        <item name="android:textColor">@color/color_blanco</item>
    </style>

    <style name="sub_titles">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@color/background_sub_titles</item>
        <item name="android:textColor">@color/color_negro</item>
    </style>

    <style name="texts">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/color_negro</item>
    </style>

</resources>
